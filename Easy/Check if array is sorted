----------------opitimised----------------------
public static boolean isSorted(int arr[],int n){
	    for(int i=1;i<n;i++){
	        if(arr[i]<arr[i-1]){
	            return false;                 Time,Space Complexity=O(n),O(1)
	        }
	    }
	    return true;
	}
-----------------Brute Force--------------
public static boolean isSorted(int arr[],int n){
	    for(int i=0;i<n;i++){
	        for(int j=i+1;j<n;j++){
	        if(arr[i]>arr[j]){                        
	            return false;                           Time,Space Complexity=O(n^2),O(1)
	        }
	    }
	 }
	    return true;
	}
